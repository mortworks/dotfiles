#!/bin/bash
set -e

# Get the directory this script is in
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Source the tool-checking logic
source "$SCRIPT_DIR/_ensure-tools.sh"

# Path to the actual script we want to invoke
TOOL_SCRIPT="$TOOLS_ROOT/hugo-tools/bin/new.sh"

# Run the underlying script, forwarding all arguments
exec "$TOOL_SCRIPT" "$@"
